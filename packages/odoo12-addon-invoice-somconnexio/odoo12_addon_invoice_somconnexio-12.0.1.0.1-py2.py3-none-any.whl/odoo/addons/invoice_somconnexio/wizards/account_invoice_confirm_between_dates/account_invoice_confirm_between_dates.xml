<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_account_invoice_confirm_between_dates_wizard" model="ir.ui.view">
      <field name="name">Account Invoice Confirm Between Dates Wizard</field>
      <field name="model">account.invoice.confirm.between.dates</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="journal_id"/>
          </group>
          <group>
            <field name="start_date"/>
            <field name="end_date"/>
          </group>
          <footer>
            <button type="object" name="run_wizard" string="Confirm" class="btn-primary"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_account_invoice_confirm_between_dates_wizard"
        name="Confirm Draft Invoices Between Dates"
        res_model="account.invoice.confirm.between.dates"
        src_model="account.invoice"
        view_mode="form" target="new" view_type="form" />
  </data>
  <menuitem name="Confirm Invoices Between Dates"
    action="action_account_invoice_confirm_between_dates_wizard"
    id="menu_action_account_invoice_confirm_between_dates_wizard"
    parent="account.menu_finance_receivables"
    sequence="100"/>
</odoo>
