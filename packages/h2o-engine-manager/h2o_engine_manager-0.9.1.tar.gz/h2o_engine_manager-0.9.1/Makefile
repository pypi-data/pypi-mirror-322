build:
	hatch build

clean-build:
	rm -rf dist

test-unit:
	hatch run test:unit -v

test-init:
	hatch run test:init -v

test-api:
	hatch run test:api -v

test-e2e:
	hatch run test:e2e -v

test-full:
	hatch run test:full -v

test-example:
	hatch run test:example -v

lint-check:
	hatch run lint:check -v

lint-fix:
	hatch run lint:fix -v

generate-docs:
	hatch run docs:generate