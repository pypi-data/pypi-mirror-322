<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.sort</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="purchase.res_config_settings_view_form_purchase"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_send_reminder']/.." position="after">
                <setting
                    id="default_sort_criteria"
                    string="Default Sort Criteria"
                    title="Select a default sort criteria for purchase order lines."
                    help="Default sort criteria for purchase order lines"
                >
                        <div class="row mt16">
                            <label
                            string="Line Order"
                            for="po_line_order_default"
                            class="col-lg-3 o_light_label"
                        />
                            <field name="po_line_order_default" />
                        </div>
                        <div class="row mt16" invisible="not po_line_order_default">
                            <label
                            string="Direction"
                            for="po_line_direction_default"
                            class="col-lg-3 o_light_label"
                        />
                            <field
                            name="po_line_direction_default"
                            required="po_line_order_default"
                        />
                        </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
