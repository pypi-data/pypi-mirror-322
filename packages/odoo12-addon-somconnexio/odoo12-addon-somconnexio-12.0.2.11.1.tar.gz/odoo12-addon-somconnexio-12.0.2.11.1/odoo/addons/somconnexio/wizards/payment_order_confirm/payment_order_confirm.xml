<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <act_window id="payment_order_confirm_action"
    multi="True"
    key2="client_action_multi"
    name="Confirm Payments"
    res_model="payment.order.confirm"
    src_model="account.payment.order"
    view_mode="form"
    target="new"/>

  <record id="payment_order_confirm_form" model="ir.ui.view">
    <field name="name">payment_order_confirm.form</field>
    <field name="model">payment.order.confirm</field>
    <field name="arch" type="xml">
      <form string="Payments Confirmation">
        <p>This wizard will confirm payment of selected orders.</p>
        <footer>
          <button type="object" name="run" string="Confirm" class="oe_highlight"/>
          <button special="cancel" string="Cancel" class="oe_link"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
