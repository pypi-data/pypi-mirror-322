<odoo>
<!-- Data Ownership -->
<record id="incoming_letter_ou_group" model="res.groups">
    <field name="name">Operating Unit</field>
    <field
            name="category_id"
            ref="ssi_letter.incoming_letter_data_ownership_module_category"
        />
</record>

<record id="ssi_letter.incoming_letter_company_group" model="res.groups">
    <field name="name">Company</field>
    <field
            name="category_id"
            ref="ssi_letter.incoming_letter_data_ownership_module_category"
        />
    <field name="implied_ids" eval="[(4, ref('incoming_letter_ou_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
