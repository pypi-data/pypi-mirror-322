<odoo>
<record id="incoming_letter_rule_ou" model="ir.rule">
    <field name="name">Outgoing Letter - Responsible to operating unit data</field>
    <field name="model_id" ref="ssi_letter.model_incoming_letter" />
    <field name="groups" eval="[(4, ref('incoming_letter_ou_group'))]" />
    <field
            name="domain_force"
        >[('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
